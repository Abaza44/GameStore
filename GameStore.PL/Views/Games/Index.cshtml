@model IEnumerable<GameStore.DAL.Entities.Game>

@{
    ViewData["Title"] = "Games Store";
    var hasAny = Model?.Any() == true; 
}

<div class="container mt-4">
    <h2>🎮 Available Games</h2>

    @if (!hasAny)
    {
        <div class="alert alert-warning mt-3">
            No Games Added Yet
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var game in Model ?? Enumerable.Empty<GameStore.DAL.Entities.Game>())
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <img src="@game.PosterUrl" class="card-img-top" alt="@game.Title"
                             style="max-height: 200px; object-fit: cover;" />
                        <div class="card-body">
                            <h5 class="card-title">@game.Title</h5>
                            <p class="card-text">@game.Description</p>
                            <span class="badge bg-primary">Price: $@game.Price</span>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>