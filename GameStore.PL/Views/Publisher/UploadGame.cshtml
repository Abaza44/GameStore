@using GameStore.BLL.ModelVM.Game
@model GameCreateModel

<style>
    
    .compact-wrap {
        max-width: 720px;
    }

    .form-card {
        border: none;
        border-radius: .75rem;
        box-shadow: 0 6px 18px rgba(0,0,0,.06);
    }

        .form-card .card-header {
            background: #fff;
        }

    .form-label {
        font-size: .875rem;
        font-weight: 600;
        margin-bottom: .25rem;
    }

    .form-text {
        font-size: .75rem;
    }

    .img-preview {
        width: 100%;
        max-height: 160px;
        object-fit: cover;
        border-radius: .5rem;
        display: none;
    }

    .dropzone {
        border: 2px dashed #d7dee7;
        border-radius: .5rem;
        padding: .75rem;
        background: #f8fafc;
        transition: .2s ease;
    }

        .dropzone:hover {
            border-color: #0d6efd;
            background: #f4f8ff;
        }

    .btn-press {
        transition: transform .08s ease;
    }

        .btn-press:active {
            transform: translateY(1px);
        }
</style>

<div class="container py-3">
    <div class="row justify-content-center">
        <div class="col-12 compact-wrap">
            <div class="card form-card">
                <div class="card-header py-2 px-3">
                    <h5 class="mb-0"><i class="fa-solid fa-upload me-2"></i>Upload New Game</h5>
                </div>

                <div class="card-body p-3">
                    <div asp-validation-summary="ModelOnly" class="text-danger small mb-2"></div>

                    <form asp-action="UploadGame" asp-controller="Publisher" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
                        @Html.AntiForgeryToken()

                        <div class="row g-2">
                            <!-- Title -->
                            <div class="col-12">
                                <label asp-for="Title" class="form-label">Title</label>
                                <input asp-for="Title" class="form-control form-control-sm" required />
                                <span asp-validation-for="Title" class="text-danger small"></span>
                            </div>

                            <!-- Description -->
                            <div class="col-12">
                                <label asp-for="Description" class="form-label">Description</label>
                                <textarea asp-for="Description" class="form-control form-control-sm" rows="3" required placeholder="Short description..."></textarea>
                                <span asp-validation-for="Description" class="text-danger small"></span>
                            </div>

                            <!-- Poster (with small preview) -->
                            <div class="col-12">
                                <label asp-for="PosterUrl" class="form-label">Poster</label>
                                <div class="dropzone">
                                    <input asp-for="PosterUrl" type="file" class="form-control form-control-sm" accept="image/*" required id="posterInput" />
                                    <small class="form-text text-muted d-block mt-1">JPG/PNG/GIF • Preferred 16:9</small>
                                    <img id="posterPreview" class="img-preview mt-2" alt="Poster preview" />
                                </div>
                                <span asp-validation-for="PosterUrl" class="text-danger small"></span>
                            </div>

                            <!-- Download URL -->
                            <div class="col-12 col-md-7">
                                <label asp-for="DownloadUrl" class="form-label">Download URL</label>
                                <input asp-for="DownloadUrl" class="form-control form-control-sm" required placeholder="https://..." />
                                <span asp-validation-for="DownloadUrl" class="text-danger small"></span>
                            </div>

                            <!-- Price -->
                            <div class="col-6 col-md-3">
                                <label asp-for="Price" class="form-label">Price</label>
                                <div class="input-group input-group-sm">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="Price" type="number" step="0.01" class="form-control" required />
                                </div>
                                <span asp-validation-for="Price" class="text-danger small"></span>
                            </div>

                            <!-- Category -->
                            <div class="col-6 col-md-2">
                                <label asp-for="CategoryId" class="form-label">Category</label>
                                <select asp-for="CategoryId" class="form-select form-select-sm" required>
                                    @foreach (var cat in ViewBag.Categories)
                                    {
                                        <option value="@cat.Id">@cat.Name</option>
                                    }
                                </select>
                                <span asp-validation-for="CategoryId" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end mt-3">
                            <button type="submit" class="btn btn-primary btn-sm btn-press">
                                <i class="fa-solid fa-cloud-arrow-up me-2"></i>Upload
                            </button>
                        </div>
                    </form>
                </div> <!-- /card-body -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        
        (function () {
            const input = document.getElementById('posterInput');
            const preview = document.getElementById('posterPreview');
            if (!input || !preview) return;
            input.addEventListener('change', function () {
                const file = this.files && this.files[0];
                if (!file) { preview.src = ""; preview.style.display = "none"; return; }
                const reader = new FileReader();
                reader.onload = e => { preview.src = e.target.result; preview.style.display = "block"; };
                reader.readAsDataURL(file);
            });
        })();

        // Bootstrap client-side validation
        (function () {
            const forms = document.querySelectorAll('.needs-validation');
            Array.prototype.slice.call(forms).forEach(form => {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) { event.preventDefault(); event.stopPropagation(); }
                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>
}
