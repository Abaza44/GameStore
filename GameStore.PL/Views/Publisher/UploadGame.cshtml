@using GameStore.BLL.ModelVM.Game

@model GameCreateModel

<form asp-action="UploadGame" asp-controller="Publisher" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" asp-for="Title" id="title" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="des">Description</label>
        <textarea asp-for="Description" id="dis" class="form-control" required></textarea>
    </div>

    <div class="form-group">
        <label for="poster">Poster</label>
        <input type="file" asp-for="PosterUrl" id="poster" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="url">Download URL</label>
        <input type="text" asp-for="DownloadUrl" id="url" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="price">Price</label>
        <input type="number" step="0.01" asp-for="Price" id="price" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="category">Select Category</label>
        <select asp-for="CategoryId" id="category" class="form-control">
            @foreach (var cat in ViewBag.Categories)
            {
                <option value="@cat.Id">@cat.Name</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Upload Game</button>
</form>