@{
    ViewData["Title"] = "Checkout Cancelled";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0">❌ Payment Cancelled</h3>
        </div>
        <div class="card-body">
            <h4 class="card-title">Your transaction was cancelled</h4>
            <p class="card-text text-muted">
                It looks like you cancelled the payment process. No charges were made.
            </p>

            <div class="alert alert-info mt-3">
                <i class="bi bi-lightbulb"></i> Don’t worry — you can try again any time!
            </div>

            <div class="mt-4">
                <a class="btn btn-primary" href="/Games">🎮 Back to Store</a>
                <a class="btn btn-outline-secondary" href="/">🏠 Home</a>
            </div>
        </div>
    </div>
</div>