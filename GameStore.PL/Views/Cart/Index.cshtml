@model GameStore.BLL.ModelVM.cart.CartVM

@{
    ViewData["Title"] = "My Cart";
}

<div class="container mt-4"> <h2>🛒 My Cart</h2>
@if (Model == null || Model.Items == null || !Model.Items.Any())
{
        <div class="alert alert-info mt-3">Cart is empty</div>
}
else
{
        <table class="table table-striped align-middle">
            <thead>
                <tr>
                    <th>Game</th>
                    <th>Price</th>
                    <th style="width: 140px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@item.Title</td>
                        <td>$@item.Price</td>
                        <td>
                            <form asp-controller="Cart" asp-action="Remove" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="gameId" value="@item.GameId" />
                                <button type="submit" class="btn btn-sm btn-outline-danger">Remove</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th>Total</th>
                    <th>$@Model.Total</th>
                    <th>
                        <form asp-controller="Checkout" asp-action="Pay" method="get" class="d-inline">
                            <button class="btn btn-primary btn-sm">Checkout</button>
                        </form>
                        <form asp-controller="Cart" asp-action="Clear" method="post" class="d-inline ms-2">
                            @Html.AntiForgeryToken()
                            <button class="btn btn-outline-secondary btn-sm">Clear</button>
                        </form>
                    </th>
                </tr>
            </tfoot>
        </table>
}
