@{
    ViewData["Title"] = "Home";
}

<div class="text-center">
    <h1 class="display-4">Welcome to 🎮 GameStore</h1>
    @if (User.Identity?.IsAuthenticated ?? false)
    {
        <p class="lead text-success">
            You are logged in as <b>@User.Identity.Name</b>
            (Role: @User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value)
        </p>
    }
    else
    {
        <p class="lead text-info">
            Not logged in, please <a asp-controller="Account" asp-action="Login">Login</a>
            or <a asp-controller="Account" asp-action="Register">Register</a>.
        </p>
    }
</div>