@model GameStore.PL.Models.ErrorViewModel
@{
    ViewData["Title"] = "Status";
    var code = Model.StatusCode ?? 0;
    string title = code switch
    {
        404 => "Page Not Found",
        403 => "Access Denied",
        401 => "Unauthorized",
        500 => "Server Error",
        _ => "Oops!"
    };
    string message = code switch
    {
        404 => "The page you are looking for might have been removed or is temporarily unavailable.",
        403 => "You don't have permission to access this page.",
        401 => "Please login to access this resource.",
        500 => "The server encountered an unexpected condition.",
        _ => "Something went wrong."
    };
}
<div class="container my-5 text-center">
    <h1 class="display-6">@title (@code)</h1>
    <p class="lead">@message</p>
    @if (Model.ShowRequestId)
    {
        <p class="text-muted"><strong>Request ID:</strong> <code>@Model.RequestId</code></p>
    }
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">Back to Home</a>
</div>