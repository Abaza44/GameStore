<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - GameStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">🎮 GameStore</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <!-- روابط عامة -->
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="About">About</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Games" asp-action="Index">Games</a></li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Games" asp-action="Index">Games</a>
                        </li>
                    </ul>

                    <!-- روابط حسب حالة المستخدم -->
                    <ul class="navbar-nav ms-auto">
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item">
                                <span class="nav-link text-white">Welcome, @User.Identity.Name</span>
                            </li>

                            @* يظهر Dashboard بس لو Admin *@
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a asp-controller="Admin" asp-action="Dashboard" class="nav-link">Admin Dashboard</a>
                                </li>
                            }
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a asp-controller="Admin" asp-action="ReviewGames" class="nav-link">Review Games</a>
                                </li>
                            }
                            @* يظهر MyGames بس لو Publisher *@
                            @if (User.IsInRole("Publisher"))
                            {
                                <li class="nav-item">
                                    <a asp-controller="Publisher" asp-action="MyGames" class="nav-link">My Games</a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Publisher" asp-action="UploadGame" class="nav-link">Upload Game</a>
                                </li>
                            }

                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-link nav-link">Logout</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a asp-controller="Account" asp-action="Login" class="nav-link">Login</a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="Account" asp-action="Register" class="nav-link">Register</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer class="bg-dark text-light text-center py-3 mt-5">
        &copy; @DateTime.Now.Year - GameStore
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>