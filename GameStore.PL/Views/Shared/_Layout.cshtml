@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - GameStore</title>

    <!-- CSS (CDN) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        html, body {
            height: 100%;
        }

        body {
            display: flex;
            flex-direction: column;
        }

        main {
            flex: 1;
        }

        footer {
            margin-top: auto;
        }

        /* وسط النافبار (Home/Top/Recent) */
        .mid-nav .nav-link {
            position: relative;
            padding: .4rem .8rem;
            border-radius: 999px;
            color: rgba(255,255,255,.85);
            transition: background-color .2s ease, color .2s ease, transform .08s ease;
        }

            .mid-nav .nav-link:hover {
                background-color: rgba(255,255,255,.12);
                color: #fff;
            }

            .mid-nav .nav-link:active {
                transform: translateY(1px);
            }

            .mid-nav .nav-link.active {
                background: #0d6efd;
                color: #fff;
            }

        }

        .navbar-brand {
            font-weight: 700;
            letter-spacing: .2px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark fixed-top" id="siteNavbar" style="z-index:1100;">
            <div class="container-fluid">
                <!-- Brand -->
                <a class="navbar-brand" asp-controller="Games" asp-action="Index">🎮 GameStore</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <!-- Centered: Home / Top / Recent -->
                    <ul class="navbar-nav mx-auto d-flex align-items-center gap-2 mid-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Games" asp-action="Index" asp-fragment="home" data-anchor="home">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Games" asp-action="Index" asp-fragment="top" data-anchor="top">Top Games</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Games" asp-action="Index" asp-fragment="recent" data-anchor="recent">Recent Games</a>
                        </li>
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item"><a asp-controller="Admin" asp-action="ManageGames" class="nav-link">Manage Games</a></li>
                                <li class="nav-item"><a asp-controller="Admin" asp-action="Dashboard" class="nav-link">Admin Dashboard</a></li>
                                <li class="nav-item"><a asp-controller="Admin" asp-action="ReviewGames" class="nav-link">Review Games</a></li>
                            }
                            @if (User.IsInRole("User"))
                            {
                                <li class="nav-item">
                                    <a asp-controller="Cart" asp-action="Index" class="nav-link">
                                        <i class="fa-solid fa-cart-shopping me-1"></i> Cart
                                    </a>
                                </li>
                                @* Add My Games *@
                                <li class="nav-item">
                                    <a asp-controller="Cart" asp-action="Index" class="nav-link">
                                        <i class="fa-solid fa-cart-shopping me-1"></i> My Games
                                    </a>
                                </li>
                            }
                            @if (User.IsInRole("Publisher"))
                            {
                                <li class="nav-item"><a asp-controller="Publisher" asp-action="MyGames" class="nav-link">My Games</a></li>
                            }

                        }



                    </ul>

                    <!-- Right side (unchanged) -->
                    <ul class="navbar-nav ms-auto">
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-link nav-link">Logout</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item"><a asp-controller="Account" asp-action="Login" class="nav-link">Login</a></li>
                            <li class="nav-item"><a asp-controller="Account" asp-action="Register" class="nav-link">Register</a></li>
                        }
                        <li class="nav-item">
                            <button id="darkModeToggle" class="btn btn-sm btn-outline-light ms-2" type="button" title="Toggle theme">
                                <i class="fa-solid fa-moon"></i>
                            </button>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>


        <script>
            // تفعيل الرابط النشط حسب الـ hash لما تكون على صفحة الهوم
            (function () {
                var path = (location.pathname || "").toLowerCase();
                var isHome = path.endsWith("/games/index") || path.endsWith("/games") || path === "/" || path === "";
                var hash = (location.hash || "#home").replace("#", "").toLowerCase();
                if (!isHome) return;
                var links = document.querySelectorAll('.mid-nav .nav-link');
                links.forEach(function (a) {
                    var target = (a.getAttribute('data-anchor') || "").toLowerCase();
                    a.classList.toggle('active', target === hash || (hash === "" && target === "home"));
                    a.addEventListener('click', function () {
                        links.forEach(function (x) { x.classList.remove('active'); });
                        a.classList.add('active');
                    });
                });
            })();
        </script>
    </header>

    <main class="container mt-4">
        @RenderBody()
    </main>

    <footer class="bg-dark text-light text-center py-3">
        &copy; @DateTime.Now.Year - GameStore
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        (function(){
          function adjustBodyPadding(){
            var nav = document.getElementById('siteNavbar');
            if(!nav) return;
            document.body.style.paddingTop = (nav.offsetHeight || 70) + 'px';
          }
          adjustBodyPadding();
          window.addEventListener('load', adjustBodyPadding);
          window.addEventListener('resize', adjustBodyPadding);
        })();
    </script>

    @RenderSection("Scripts", required: false)
    @await Html.PartialAsync("_SuccessToastPartial")
    @await Html.PartialAsync("_ErrorToastPartial")
</body>
</html>