@using GameStore.DAL.Entities
@using GameStore.DAL.Enums
@model IEnumerable<User>

@{
    ViewData["Title"] = "Admin Dashboard";
}

<h2>Admin Dashboard</h2>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Full Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Change Role</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.ID</td>
                <td>@user.FullName</td>
                <td>@user.Email</td>
                <td>@user.Role</td>
                <td>
                    <form asp-action="ChangeRole" method="post" class="d-flex">
                        <input type="hidden" name="userId" value="@user.ID" />
                        <select name="role" class="form-select form-select-sm me-2">
                            <option value="@UserRole.User" selected="@(user.Role == UserRole.User)">User</option>
                            <option value="@UserRole.Publisher" selected="@(user.Role == UserRole.Publisher)">Publisher</option>
                            <option value="@UserRole.Admin" selected="@(user.Role == UserRole.Admin)">Admin</option>
                        </select>
                        <button type="submit" class="btn btn-sm btn-primary">Save</button>
                    </form>
                </td>
                <td>
                    <form asp-action="DeleteUser" method="post">
                        <input type="hidden" name="userId" value="@user.ID" />
                        <button type="submit" class="btn btn-sm btn-danger"
                                onclick="return confirm('Are you sure to delete this user?');">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>