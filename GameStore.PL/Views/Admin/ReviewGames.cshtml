@using GameStore.DAL.Entities
@model IEnumerable<Game>

@{
    ViewData["Title"] = "Review Games";
    var hasAny = Model?.Any() == true;
}

<div class="container mt-4">
    <h2>🕹 Pending Games Approval</h2>

    @if (!hasAny)
    {
        <div class="alert alert-info mt-3">No games are currently pending review.</div>
    }
    else
    {
        <table class="table table-bordered align-middle">
            <thead class="table-dark">
                <tr>
                    <th style="width: 18%;">Title</th>
                    <th>Description</th>
                    <th style="width: 18%;">Publisher</th>
                    <th style="width: 10%;">Price</th>
                    <th style="width: 32%;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var game in Model ?? Enumerable.Empty<Game>())
                {
                    <tr>
                        <td>@game.Title</td>
                        <td>@game.Description</td>
                        <td>@game.Publisher?.FullName</td>
                        <td>$@game.Price</td>
                        <td>
                            <!-- Approve -->
                            <form asp-action="Approve" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="gameId" value="@game.Id" />
                                <button class="btn btn-success btn-sm">Approve</button>
                            </form>

                            <!-- Reject -->
                            <form asp-action="Reject" method="post" class="d-inline ms-1">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="gameId" value="@game.Id" />
                                <input type="text" name="reason" placeholder="Rejection reason"
                                       class="form-control form-control-sm d-inline w-auto" style="min-width:150px;" />
                                <button class="btn btn-warning btn-sm ms-1">Reject</button>
                            </form>

                            <!-- Delete -->
                            <form asp-controller="Games" asp-action="DeleteGame" method="post"
                                  class="d-inline"
                                  onsubmit="return confirm('Are you sure you want to delete this game?');">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="gameId" value="@game.Id" />
                                <button type="submit" class="btn btn-outline-danger btn-sm">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>